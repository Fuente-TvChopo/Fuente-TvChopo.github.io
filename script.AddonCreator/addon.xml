<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.AddonCreator"
       name="Addon Creator"
       version="0.0.2"
       provider-name="Titan">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>	
    </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
	<provides>executable</provides>
  </extension>
  
   <extension point="xbmc.addon.repository" name="CRISTAL AZUL REPO">
        <info>https://raw.githubusercontent.com/picapaujulen/repositorio/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/picapaujulen/repositorio/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/picapaujulen/repositorio/master/Repositorio/</datadir>
    </extension>
	
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Crea tu propio addon usando este script</summary>
    <description>Crea tu propio addon usando este script,gracias a Picapau,LouFesta,Adrian y SuperTopo por su ayuda</description>
    <language></language>
    <license></license>
    <source></source>
    <forum></forum>
    <website></website>
  </extension>
</addon>